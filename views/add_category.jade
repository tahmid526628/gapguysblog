extends layout

block content
    .container
        ul.errors
            if errors
                each error in errors
                    li.alert.alert-danger= error.msg
        h1 Add Category
        form(action="/members/add_category", method='post')
            label Category Title
            input.form-control(type="text", name='title', placeholder='Enter category title')
            br
            button.btn.btn-primary(type='submit', value='submit') Submit

